<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/YP_Blue</item>
        <item name="colorOnPrimary">@color/YP_White</item>
        <item name="colorSecondary">@color/YP_White</item>
        <item name="colorOnSecondary">@color/YP_Black</item>
        <item name="colorPrimaryContainer">@color/YP_White</item>
        <item name="colorOnPrimaryContainer">@color/YP_Black</item>
        <item name="colorOnSecondaryContainer">@color/YP_Text_Gray</item>
        <item name="colorControlHighlight">@color/YP_Text_Gray</item>
        <item name="colorControlNormal">@color/YP_Light_Gray</item>
        <item name="colorContainer">@color/YP_Light_Gray</item>
        <item name="colorOnContainer">@color/YP_Text_Gray</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
    
    <style name="TrackName">
        <item name="android:textColor">@color/YP_Black_Total</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ArtistName" parent="TrackName">
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:drawableTint">@color/YP_Text_Gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TrackForwardIcon">
        <item name="backgroundTint">@color/YP_Text_Gray</item>
    </style>
</resources>