<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:textColor">@color/appName</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>
    <style name="ButtonStyle" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/main_padding</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/text</item>
        <item name="iconPadding">@dimen/icon_margin</item>
        <item name="cornerRadius">@dimen/main_button_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>