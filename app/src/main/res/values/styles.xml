<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="BottomMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="itemBackground">?attr/colorSecondary</item>
        <item name="itemIconTint">@drawable/menu_item_color</item>
        <item name="itemPaddingBottom">6dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemTextColor">@drawable/menu_item_color</item>
        <item name="animationMode">slide</item>
        <item name="colorOutline">@color/YP_Light_Gray</item>
        <item name="itemTextAppearanceInactive">@style/MenuTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/MenuTextAppearance</item>
    </style>
    <style name="BottomMenuActiveItem">
        <item name="android:color">@null</item>
    </style>
    <style name="MenuTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    <style name="SecondaryLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">top</item>
    </style>
    <style name="OtherSecondaryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">@dimen/main_padding</item>
        <item name="android:paddingBottom">@dimen/main_padding</item>
        <item name="android:textSize">@dimen/setting_title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">left</item>
    </style>
    
    <!-- Стили SettingsLayout -->

    <style name="SettingsButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/main_padding</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">@dimen/setting_padding_start</item>
        <item name="android:paddingRight">@dimen/setting_icon_padding_end</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">@dimen/setting_icon_padding_end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconPadding">0dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/setting_item_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- Стили SearchLayout -->
    
    <style name="SearchEditText">
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColor">@color/YP_Black_Total</item>
        <item name="android:textColorHint">?attr/colorOnContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:inputType">text</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:importantForAutofill">no</item>
    </style>
    <style name="SearchLineIcon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">?attr/colorOnContainer</item>
    </style>
    <style name="BackIcon">
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">12dp</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>
    <style name="SearchLineFrame">
        <item name="android:layout_marginTop">8dp</item>>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@drawable/search_edit</item>
        <item name="android:backgroundTint">@color/YP_Light_Gray</item>
    </style>
    <style name="TrackErrorStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingTop">102dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="LibraryMessageStyle" parent="TrackErrorStyle">
        <item name="android:paddingTop">106dp</item>
    </style>>
    <style name="ButtonOnSecondary">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/add_button_padding</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:layout_marginBottom">@dimen/main_padding</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/font_usual_size</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="HistoryTitleStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <!-- Стили окна плеера -->
    <style name="PlayerTrackNameStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="PlayerLabelStyle">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
    </style>
    <style name="PlayerAttributeStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginStart">@dimen/main_padding</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:height">48dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorAnimationMode">linear</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMinWidth">0dp</item> <!-- Разрешаем сжатие -->
        <item name="tabMaxWidth">0dp</item> <!-- Убираем ограничение максимальной ширины -->
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
    </style>

</resources>
